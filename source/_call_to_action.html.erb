<!-- Call to Action
================================================== -->
<section class="cta text-center">

  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <h2>How can we help your organization thrive?</h2>
        <p><button class="btn contact-button" type="button" role="button">Let us know</button></p>
        <div class='contact-form'>
          <form role="form" disable="true" data-toggle="validator" name="contact-form" id="contact-form">
            <div class='name form-group'>
              <input class='form-control email' placeholder='Name' type='text' id="name" name="name" autofocus required>
            </div>
            <div class='contact form-group'>
              <input class='form-control email' placeholder='Email Address' type='email' id="email" name="email" required>
            </div>
            <div class='message form-group'>
              <textarea class="form-control" placeholder='Your message' id="message" name="message" required style="resize: vertical"></textarea>
            </div>
            <div id="success"> </div> <!-- For success/fail messages -->
            <footer class="submit-button form-group">
              <button type="submit" class="btn">Send your message</button>
            </footer>
          </form>
        </div>
      </div>
    </div>

  </div>

</section>
